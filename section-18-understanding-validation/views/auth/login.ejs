<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/login" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" value="<%= oldInput.email %>">
                <% if (errorMessage && errorMessage.email) { %>
                    <div class="message-error-inline"><%= errorMessage.email %></div>
                <% } %>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= oldInput.password %>">
                <% if (errorMessage && errorMessage.password) { %>
                    <div class="message-error-inline"><%= errorMessage.password %></div>
                <% } %>
            </div>
            <button class="btn" type="submit">
                Login
            </button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>